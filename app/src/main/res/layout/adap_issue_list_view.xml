<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap">

    <TextView
        android:id="@+id/issue_name_txt"
        style="@style/TextOpenSansRegular"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/size4"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/size2"
        android:layout_marginBottom="@dimen/size4"
        android:layout_toStartOf="@+id/issue_status_btn"
        android:gravity="start|center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/text12" />

    <Button
        android:id="@+id/issue_status_btn"
        style="@style/ButtonOpenSansSemiBold"
        android:layout_width="wrap_content"
        android:paddingStart="@dimen/size15"
        android:layout_marginTop="@dimen/size5"
        android:layout_marginBottom="@dimen/size5"
        android:paddingEnd="@dimen/size15"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/completed"
        tools:targetApi="lollipop" />
</RelativeLayout>