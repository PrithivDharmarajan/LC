<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutMatch">

    <RelativeLayout
        style="@style/LayoutMatch"
        android:layout_above="@+id/book_appointment_btn">

        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/size20"
            android:layout_marginEnd="@dimen/size20"
            android:layout_marginBottom="@dimen/size15"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/show_current_location_img"
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/size25"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/location" />
            <android.support.v7.widget.CardView
                android:id="@+id/appointment_card_view"
                style="@style/LayoutWidMatch_HeiWrap"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/size5">

                <LinearLayout
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:orientation="vertical">

                    <LinearLayout style="@style/LayoutWidMatch_HeiWrap"
                        android:layout_marginTop="@dimen/size5"
                        android:layout_marginBottom="@dimen/size5">

                        <LinearLayout style="@style/LayoutWidWei_HeiWrap">

                            <ImageView
                                android:layout_width="@dimen/size40"
                                android:layout_height="@dimen/size40"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/size10"
                                android:adjustViewBounds="true"
                                android:clickable="false"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/brown_circle_bg" />

                            <LinearLayout
                                style="@style/LayoutWidMatch_HeiWrap"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/provider_name_txt"
                                    style="@style/TextOpenSansRegular"
                                    android:layout_gravity="center"
                                    android:text="@string/app_name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text12" />

                                <TextView
                                    android:id="@+id/provider_rating_txt"
                                    style="@style/TextOpenSansRegular"
                                    android:layout_gravity="center"
                                    android:text="5.0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text12" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/appointment_accepted_txt"
                            style="@style/TextOpenSansRegular"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/appointment_accepted"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text9" />
                    </LinearLayout>

                    <View
                        style="@style/LayoutWidMatch_HeiWrap"
                        android:background="@color/gray"
                        android:layout_height="@dimen/size1"/>

                    <LinearLayout
                        style="@style/LayoutWidMatch_HeiWrap">

                        <LinearLayout
                            style="@style/LayoutWidWei_HeiWrap"
                            android:orientation="vertical"
                            android:gravity="center"

                            android:layout_marginBottom="@dimen/size2"
                            android:padding="@dimen/size5"
                            tools:ignore="UseCompoundDrawables">
                            <ImageView
                                android:layout_width="@dimen/size20"
                                android:layout_height="@dimen/size20"
                                android:layout_margin="@dimen/size5"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/brown_circle_bg" />
                            <TextView
                                style="@style/TextOpenSansRegular"
                                android:layout_gravity="center"
                                android:text="@string/call_shoe_repairer"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text11" />
                        </LinearLayout>
                        <View
                            android:layout_height="match_parent"
                            android:background="@color/gray"
                            android:layout_width="@dimen/size1"/>
                        <LinearLayout
                            style="@style/LayoutWidWei_HeiWrap"
                            android:orientation="vertical"
                            android:gravity="center"

                            android:layout_marginBottom="@dimen/size2"
                            android:padding="@dimen/size5"
                            tools:ignore="UseCompoundDrawables">
                            <ImageView
                                android:layout_width="@dimen/size20"
                                android:layout_height="@dimen/size20"
                                android:layout_margin="@dimen/size5"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/brown_circle_bg" />
                            <TextView
                                style="@style/TextOpenSansRegular"
                                android:layout_gravity="center"
                                android:text="@string/cancel_appointment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text11" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>



    </RelativeLayout>




        <Button
            android:id="@+id/book_appointment_btn"
            style="@style/ButtonOpenSansSemiBold"
            android:layout_alignParentBottom="true"
            android:background="@color/orange"
            android:text="@string/book_appointment"
            android:textColor="@color/white"  />
</RelativeLayout>