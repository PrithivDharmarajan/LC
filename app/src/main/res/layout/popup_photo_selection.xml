<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view_for_font"
    style="@style/LayoutMatch"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_margin="@dimen/size30"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/size1">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size15">

            <TextView
                android:id="@+id/header_txt"
                style="@style/TextOpenSansSemiBold"
                android:layout_marginTop="@dimen/size3"
                android:layout_marginBottom="@dimen/size3"
                android:text="@string/choose_type"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/camera_btn"
                style="@style/TextOpenSansSemiBold"
                android:layout_height="@dimen/size33"
                android:layout_marginTop="@dimen/size10"

                android:background="@color/blue"
                android:text="@string/camera"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text15" />

            <Button
                android:id="@+id/gallery_btn"
                style="@style/TextOpenSansSemiBold"
                android:layout_height="@dimen/size33"
                android:layout_marginTop="@dimen/size10"
                android:background="@color/orange"
                android:text="@string/gallery"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text15" />

            <Button
                android:id="@+id/cancel_btn"
                style="@style/TextOpenSansSemiBold"
                android:layout_height="@dimen/size33"
                android:layout_marginTop="@dimen/size10"
                android:layout_marginBottom="@dimen/size10"
                android:background="@color/light_gray"
                android:text="@android:string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text15" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>