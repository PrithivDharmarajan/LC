<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size1"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size5">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginBottom="@dimen/size5">

            <LinearLayout style="@style/LayoutWidWei_HeiWrap">

                <ImageView
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/size10"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/default_profile" />

                <LinearLayout
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/provider_name_txt"
                        style="@style/TextOpenSansRegular"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text12" />


                    <LinearLayout
                        style="@style/LayoutWidMatch_HeiWrap"
                        android:gravity="center_vertical">

                        <RatingBar
                             style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="1"
                            android:progressTint="@color/orange"
                            android:rating="1"
                            tools:targetApi="lollipop" />

                        <TextView
                            android:id="@+id/provider_rating_txt"
                            style="@style/TextOpenSansRegular"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/LayoutWidWei_HeiWrap"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appointment_accepted_txt"
                    style="@style/TextOpenSansRegular"
                    android:layout_gravity="center"
                    android:text="@string/appointment_accepted"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text9" />

                <TextView
                    android:id="@+id/arrival_time_txt"
                    style="@style/TextOpenSansRegular"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/size3"
                    android:paddingBottom="@dimen/size3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text10" />
            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_height="@dimen/size1"
            android:background="@color/gray" />

        <LinearLayout style="@style/LayoutWidMatch_HeiWrap">

            <LinearLayout
                android:id="@+id/call_shoe_repairer_lay"
                style="@style/LayoutWidWei_HeiWrap"
                android:layout_marginBottom="@dimen/size2"
                android:gravity="center"

                android:orientation="vertical"
                android:padding="@dimen/size5"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:layout_margin="@dimen/size5"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/call_provider" />

                <TextView
                    style="@style/TextOpenSansRegular"
                    android:layout_gravity="center"
                    android:text="@string/call_shoe_repairer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text11" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/size1"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/cancel_appointment_lay"
                style="@style/LayoutWidWei_HeiWrap"
                android:layout_marginBottom="@dimen/size2"
                android:gravity="center"

                android:orientation="vertical"
                android:padding="@dimen/size5"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:layout_margin="@dimen/size5"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/cancel" />

                <TextView
                    style="@style/TextOpenSansRegular"
                    android:layout_gravity="center"
                    android:text="@string/cancel_appointment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
