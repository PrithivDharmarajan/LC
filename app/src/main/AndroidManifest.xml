<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lipcap">

    <!-- permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".main.LipCapApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- First launch screen -->
        <activity
            android:name=".ui.Splash"
            android:theme="@style/AppSplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.Login"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".ui.SelectUserType"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".ui.CustomerRegistration"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".ui.ProviderRegistration"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".ui.CustomerHome"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity
            android:name=".ui.ProviderHome"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <!-- Fabric API key -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="3d9401c1c67a72ae6b1a323c0ac9c7f0ff3addf5" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_map_id" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Get and Reg FireBase Device ID -->

        <!-- FireBase Push notification Service -->

        <service android:name=".main.FireBasePushMessagingService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="true" />

    </application>

</manifest>